rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /recordings/{allPaths=**} {
      // Allow anonymous users to write (for the Android app)
      allow write: if request.auth != null;
      
      // Allow authenticated users to read (for the admin dashboard)
      allow read: if request.auth != null;
    }
  }
}
